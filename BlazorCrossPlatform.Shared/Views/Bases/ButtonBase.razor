<FluentButton OnClick="OnClick"
              Disabled="@IsDisabled"
              Appearance="@Appearance"
              >
    @Text
</FluentButton>

@code
{
    private async Task Click() => await OnClick.InvokeAsync();

    public void Disable()
    {
        this.IsDisabled = true;
        InvokeAsync(StateHasChanged);
    }

    public void Enable()
    {
        this.IsDisabled = false;
        InvokeAsync(StateHasChanged);
    }
}
