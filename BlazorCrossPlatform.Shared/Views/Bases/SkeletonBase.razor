<FluentSkeleton Width="@Width" Height="@Height" Shimmer="true">
    @ChildContent
</FluentSkeleton>

@code
{
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Height { get; set; } = "100%";

    [Parameter]
    public string Width { get; set; } = "100%";
}
